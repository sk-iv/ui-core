{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/ComboboxFieldProps",
    "definitions": {
        "ComboboxFieldProps": {
            "type": "object",
            "properties": {
                "clearText": {
                    "type": "string",
                    "description": "Заменяет дефолтный текст иконки крестик"
                },
                "closeText": {
                    "type": "string",
                    "description": "Заменяет дефолтный текст иконки шеврон"
                },
                "disabled": {
                    "type": "boolean",
                    "description": "Заблокированное состояние",
                    "default": false
                },
                "error": {
                    "type": "boolean",
                    "description": "Состояние ошибки",
                    "default": false
                },
                "fullWidth": {
                    "type": "boolean",
                    "description": "На всю ширину родительского контейнера",
                    "default": false
                },
                "helperText": {
                    "type": "string",
                    "description": "Вспомогательный текст"
                },
                "loading": {
                    "type": "boolean",
                    "description": "Состояние загрузки",
                    "default": false
                },
                "required": {
                    "type": "boolean",
                    "description": "Поле обязательно для выбора",
                    "default": false
                }
            },
            "additionalProperties": false
        }
    }
}