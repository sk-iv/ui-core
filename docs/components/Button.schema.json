{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/ButtonProps",
    "definitions": {
        "ButtonProps": {
            "type": "object",
            "properties": {
                "className": {
                    "type": "string"
                },
                "color": {
                    "type": "string",
                    "enum": [
                        "default",
                        "primary",
                        "secondary",
                        "accent"
                    ],
                    "description": "Цвет кнопки"
                },
                "disabled": {
                    "type": "boolean",
                    "description": "Заблокированное состояние",
                    "default": false
                },
                "disableFocusRipple": {
                    "type": "boolean",
                    "description": "убрать пульсацию фокуса",
                    "default": false
                },
                "fullWidth": {
                    "type": "boolean",
                    "description": "На всю длину родительского контейнера",
                    "default": false
                },
                "href": {
                    "type": "string",
                    "description": "URL в ситуации, когда кнопка должна быть ссылкой"
                },
                "loading": {
                    "type": "boolean",
                    "description": "Состояние загрузки"
                },
                "size": {
                    "type": "string",
                    "enum": [
                        "md",
                        "sm",
                        "lg"
                    ],
                    "description": "Высота кнопки"
                },
                "variant": {
                    "type": "string",
                    "enum": [
                        "contained",
                        "outlined"
                    ],
                    "description": "Призрачная или обычная кнопка"
                }
            },
            "additionalProperties": false
        }
    }
}